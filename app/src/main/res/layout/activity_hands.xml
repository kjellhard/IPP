<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isak.ipp.hands">

    <Button
        android:id="@+id/lHand"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="75dp"
        android:text="Vänster"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lHslide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rHand"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginBottom="31dp"
        android:text="Höger"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/rHslide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lHslide" />

    <SeekBar
        android:id="@+id/lHslide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="52dp"
        app:layout_constraintBottom_toTopOf="@+id/rHand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lHand" />

    <SeekBar
        android:id="@+id/rHslide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="83dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rHand" />

</android.support.constraint.ConstraintLayout>
